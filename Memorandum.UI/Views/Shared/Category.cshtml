@model IEnumerable<Memorandum.UI.Models.Category.CategoryResponse>
@{
    ViewData["Title"] = "Category";
}
<div class="text-center">
    <h1 class="display-4">Categories</h1>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    <a asp-action="AddCategory"
                        class="btn btn-sm btn-success">
                        <i class="fa-solid fa-plus">
                            New
                        </i>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <form asp-action="DeleteCategory" asp-route-id="@item.Id">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning">
                                    <i class="fa-solid fa-pen-to-square">Update</i>
                                </a>
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure to delete this record?')">
                                    <i class="far fa-trash-alt">Delete</i>
                                </button>
                            </div>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
